<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>irontest-parent</artifactId>
        <groupId>io.irontest</groupId>
        <version>0.3.7</version>
    </parent>

    <artifactId>irontest-core-ui</artifactId>

    <properties>
        <angularjs.version>1.5.7</angularjs.version>
        <angular-ui-grid.version>3.2.1</angular-ui-grid.version>
        <angular-ui-router.version>0.3.1</angular-ui-router.version>
        <bootstrap.version>3.3.6</bootstrap.version>
        <jquery.version>1.11.1</jquery.version>
        <angular-bootstrap.version>1.3.3</angular-bootstrap.version>
        <startbootstrap-sb-admin-2.version>1.0.8</startbootstrap-sb-admin-2.version>
        <underscore.version>1.8.3</underscore.version>
        <ui-grid-draggable-rows.version>0.3.2</ui-grid-draggable-rows.version>
        <ng-file-upload.version>12.0.4</ng-file-upload.version>
        <metisMenu.version>2.5.2</metisMenu.version>
        <font-awesome.version>4.6.3</font-awesome.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.webjars</groupId>
            <artifactId>angularjs</artifactId>
            <version>${angularjs.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>angular-ui-grid</artifactId>
            <version>${angular-ui-grid.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>angular-ui-router</artifactId>
            <version>${angular-ui-router.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars</groupId>
            <artifactId>bootstrap</artifactId>
            <version>${bootstrap.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>angular-bootstrap</artifactId>
            <version>${angular-bootstrap.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars</groupId>
            <artifactId>startbootstrap-sb-admin-2</artifactId>
            <version>${startbootstrap-sb-admin-2.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>underscore</artifactId>
            <version>${underscore.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars.bower</groupId>
            <artifactId>ui-grid-draggable-rows</artifactId>
            <version>${ui-grid-draggable-rows.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars</groupId>
            <artifactId>ng-file-upload</artifactId>
            <version>${ng-file-upload.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars</groupId>
            <artifactId>metisMenu</artifactId>
            <version>${metisMenu.version}</version>
        </dependency>
        <dependency>
            <groupId>org.webjars</groupId>
            <artifactId>font-awesome</artifactId>
            <version>${font-awesome.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- extract bootstrap mini css file, renamed, to the same folder as the mustache file;
                 remove the plugins after https://github.com/spullara/mustache.java/issues/168 is resolved -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeArtifactIds>bootstrap</includeArtifactIds>
                            <includes>**/bootstrap.min.css</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.coderplus.maven.plugins</groupId>
                <artifactId>copy-rename-maven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <id>copy-file</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <sourceFile>target/dependency/META-INF/resources/webjars/bootstrap/${bootstrap.version}/css/bootstrap.min.css</sourceFile>
                            <destinationFile>target/classes/io/irontest/models/bootstrap.min.css.mustache</destinationFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- no need to produce dist, no matter dev or prod profile -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <!-- filter index.htm with library versions -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>assets/app/index.htm</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>